{
  "name": "fortunewheel",
  "version": "1.0.0",
  "description": "Weekly prize wheel experience for the office",
  "main": "server/index.js",
  "scripts": {
    "dev": "npm run prepare:data && concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server": "npm run prepare:data && node server/index.js",
    "server:dev": "npm run prepare:data && nodemon --watch server --ext js,json server/index.js",
    "client:dev": "npm run dev --prefix client",
    "client:build": "npm run build --prefix client",
    "client:preview": "npm run preview --prefix client",
    "build": "npm run client:build",
    "prepare:data": "node scripts/prepare-data.js",
    "test": "echo \"No automated tests yet\""
  },
  "keywords": [],
  "author": "loxxy",
  "license": "MIT",
  "type": "commonjs",
  "dependencies": {
    "better-sqlite3": "^12.4.1",
    "cors": "^2.8.5",
    "cron-parser": "^5.4.0",
    "csv-parse": "^6.1.0",
    "csv-stringify": "^6.6.0",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "node-cron": "^4.2.1"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.11"
  }
}
