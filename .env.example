# Express server
PORT=4000

# Vite dev server port (default 5173)
VITE_CLIENT_PORT=5173

# Cron schedule (minute hour day-of-month month day-of-week)
# Default: 1:00 PM every Friday
DRAW_CRON=0 0 13 * * FRI

# Override timezone if the server should run draws in a fixed region
DRAW_TIMEZONE=America/Toronto

# Winner storage configuration
WINNER_HISTORY_LIMIT=40
REPEAT_COOLDOWN=3

# Admin console
ADMIN_PASSWORD=password

# Force HTTPS redirects (true/false)
ENABLE_HTTPS=false

# Frontend can point to deployed API when building client bundle
# VITE_API_URL=https://your-domain.com
